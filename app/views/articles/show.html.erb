<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul style="list-style-type:none;">
  <li><%= link_to "Destroy", article_path(@article), data: {
                    method: :delete,
                    confirm: "Are you sure?"
                  } %> |
  <%= link_to "Edit", edit_article_path(@article) %> | <%= link_to 'Back', :back %></li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
